<div class="body">
	<div class="container">
	<div class="row">
	<%= render 'users/list', book: @book, user: @user %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<tr><!--ここに繰り返し　user:id　と　book:title と book:body-->
						<% @books.each do |book| %>
						<td></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>