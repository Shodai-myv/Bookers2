<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<%= render 'users/list', book: @book, user: current_user %>
			<div class="clo-xs-9">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<% @users.each do |user| %>
							<td><%= attachment_image_tag current_user, :profile_image %></td>
							<td><%= user.name %></td>
							<%= link_to 'Show', user_path(user) %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>