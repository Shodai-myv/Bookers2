<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th> <%= user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
			</div>
			<h2>New book</h2>
			<%= form_for(book) do |f| %>

				<h4>Title</h4>
    			<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_area :body %>

				<%= f.submit 'Create Book' %>

			<% end %>
		</div>