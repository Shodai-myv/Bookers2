<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<%= form_for(@book) do |f| %>

				<h4>Title</h4>
    			<%= f.text_field :title %>

				<h4>Opinion</h4>
				<%= f.text_area :body %>

				<%= f.submit 'Update Book' %>

				<%= link_to "show", book_path(@book) %>
				|
				<%= link_to "back", books_path %>
				<% end %>
			</div>
		</div>
	</div>
</div>